{
  "display_information": {
    "name": "DevOps Bot",
    "description": "n8n 기반 DevOps 자동화 봇 - 권한 승인, 배포 알림, 에러 모니터링",
    "background_color": "#4A154B",
    "long_description": "DevOps Bot은 n8n 워크플로우와 연동하여 다양한 DevOps 자동화 작업을 수행합니다."
  },
  "features": {
    "bot_user": {
      "display_name": "DevOps Bot",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "chat:write.customize",
        "incoming-webhook"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://n8n.set-of.com/webhook/slack-interaction"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
